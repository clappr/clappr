{
  "name": "@clappr/plugins",
  "version": "0.8.10",
  "description": "Main plugins for the Clappr project",
  "main": "./dist/clappr-plugins.js",
  "module": "./dist/clappr-plugins.esm.js",
  "scripts": {
    "bundle-check": "ANALYZE_BUNDLE=true rollup -c",
    "release": "MINIMIZE=true rollup -c",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "test": "jest /src --coverage --silent",
    "test:coverage": "open coverage/lcov-report/index.html",
    "test:debug": "node --inspect node_modules/.bin/jest src/ --runInBand",
    "test:watch": "jest /src --watch",
    "lint": "eslint *.js src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "rollup -c rollup.config.dev.js --watch",
    "commitzen": "git-cz",
    "prepublishOnly": "lerna run release --scope=@clappr/plugins"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:clappr/clappr-plugins.git"
  },
  "author": "Globo.com",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/clappr/clappr-plugins/issues"
  },
  "homepage": "https://github.com/clappr/clappr-plugins",
  "peerDependencies": {
    "@clappr/core": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@babel/preset-env": "^7.22.15",
    "@clappr/core": "^0.13.1",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^6.0.2",
    "autoprefixer": "^10.4.15",
    "babel-jest": "^30.2.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.49.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-console": "^2.0.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.29",
    "postcss-url": "^10.1.3",
    "rollup": "^3.29.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-named-directory": "^1.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/*.spec.js",
      "src/vendor",
      "node_modules"
    ]
  },
  "nx": {
    "targets": {
      "test": {
        "dependsOn": [
          "^release"
        ]
      }
    }
  }
}
